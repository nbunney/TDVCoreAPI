{
  "name": "frassetapi",
  "description": "frassetapi",
  "author": "Nathan Bunney",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/inventawebnet/frassetapi/src/master/"
  },
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "start-dev": "nodemon -e js,json,html app.js",
    "start-devtools": "nodemon --inspect -e js,json,html app.js",
    "test": "mocha test/admin.js test/api.js",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "bunyan": "^1.8.12",
    "child-process-promise": "^2.2.0",
    "csv": "^5.1.0",
    "debug": "^2.6.9",
    "dotenv": "^4.0.0",
    "htmlparser": "^1.7.7",
    "jsdom": "^9.11.0",
    "json2csv": "^4.5.1",
    "jsonwebtoken": "^7.4.3",
    "koa": "^2.6.1",
    "koa-body": "^2.6.0",
    "koa-bunyan": "^1.0.1",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-lusca": "^2.2.0",
    "koa-router": "^7.4.0",
    "koa2-cors": "^2.0.6",
    "luxon": "^1.10.0",
    "mailgun-js": "^0.20.0",
    "markdown-it": "^8.4.2",
    "moment": "^2.22.2",
    "mysql2": "^1.6.1",
    "mysqldump": "^2.2.1",
    "mz": "^2.7.0",
    "nodemailer": "^4.6.8",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.3",
    "scrypt": "^6.0.3",
    "xlsx": "^0.13.5"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "npm-check": "^5.9.0",
    "supertest": "^3.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always",
        {
          "singleValue": false
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ],
      "no-case-declarations": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "info"
          ]
        }
      ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": "error",
      "quotes": [
        "error",
        "single",
        "avoid-escape"
      ],
      "require-await": "error",
      "semi": [
        "error",
        "always"
      ],
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
